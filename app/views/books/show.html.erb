<% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
<div class="container">
    <div class="row">
      <div class="col-lg-3">
         <%= render 'books/side', book: @book, user: @user %>
      </div>
      <div class="col-lg-9">
         <h2>Book detail</h2>
         <table>
         　<tr>
            <thead>
                <th></th>

                <th>Title</th>

                <th>Opinion</th>
            </thead>
           </tr>
           <tr>
            <td>
            <a><%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></a>
            </td>
            <td>
                <%= @book.title %>
            </td>
            <td>
                <%= @book.body %>
            </td>
            <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(book.id), class: "edit_book_#{book.id} btn btn-success btn-sm btn_txt_color" %>
              <%= link_to "Destroy", book_path(book.id), method: :delete,  "data-confirm" => "本当に削除しますか？"  ,class:"btn-sm btn-danger destroy_book_10349"%>
          　 </td>
  　　　      <% end %>
         　</tr>
         </table>
      </div>



    </div>
</div>