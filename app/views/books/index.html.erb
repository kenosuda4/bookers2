<div class="container">
  <div class="row">
    <% if @book.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
  <div class="row">

    <div class="col-xs-3">
        <%= render 'books/side', book: @book, user: @user %>
    </div>
    <div class="col-xs-9">
      <h3>Bookers</h3>
      <table class="table table-striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <a><#%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></a>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
              <td>
                <%= link_to "Edit", edit_book_path(book.id), class: "edit_book_#{book.id} btn btn-success btn-sm btn_txt_color" %>
              </td>
              <td>
              <%= link_to "Destroy", book_path(book.id), method: :delete,  "data-confirm" => "本当に削除しますか？"  ,class:"btn-sm btn-danger destroy_book_10349"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>