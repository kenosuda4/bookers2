<div class="row">
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>
<h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
 

    <h4>title</h4>
    <%= f.text_field :title, class:"form-control" %>
 
    <h4>opinion</4>
    <%= f.text_area :body, class:"form-control" %>
 
    <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
 <% end %>
