<div class="container">
  <div class="row">
     <div class="col-xs-3">
     <h2>User info</h2>
       <div class="row">
    <% if @user.errors.any? %>
      <%= @book.errors.count %>件のerrorが発生しました
      <% @user.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
   </div>
     <%= form_for(@user) do |f| %>
 

        <h4>name</h4>
        <%= f.text_field :name, class:"form-control" %>
     
        <h4>introduction</4>
        <%= f.text_area :introduction, class:"form-control" %>
        
        <h4>image</h4>
        <%= f.attachment_field :profile_image %>
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
     <% end %>
       
    <div class="col-xs-9">
      
    </div>
  </div>
</div>