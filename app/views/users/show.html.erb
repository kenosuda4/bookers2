<div class="container">
<div class="row">
  <div class="col-lg-3">
    <%= render 'books/side', book: @book, user: @user %>
  </div>
    <% if flash[:notice] %>
      <div class="flash">
         <%= flash[:notice] %>
      </div>
   　<% end %>
  <div class="col-lg-9">
     <h2>Books</h2>
     <table>
     　<tr>
        <thead>
            <th>image</th>
            <th>name</th>
            <th>opinion</th>
        </thead>
      </tr>
      <tr>
        <% @books.each do |book| %>
         <td>
            <a><%= attachment_image_tag @user, :profile_image, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg", size: "60x60" %></a>
         </td>
         <td>
            <%= link_to book.title, book_path(book.id) %>
         </td>
         <td>
            <%= book.body %>
         </td>
         </tr>
        <% end %>
     　
     </table>
  </div>



</div>
</div>